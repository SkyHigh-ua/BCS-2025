{
  "name": "uptime",
  "description": "A module to check the uptime of a system.",
  "inputs": {
    "site": {
      "domain": {
        "type": "string",
        "description": "The domain to check uptime for"
      }
    },
    "uptime": {
      "timestamp": {
        "type": "string",
        "description": "The timestamp to check uptime for"
      },
      "uptimeData": {
        "type": "array",
        "description": "The status of the uptime check (up or down)"
      }
    }
  },
  "outputs": {
    "uptimeData": {
      "type": "array",
      "description": "Array of uptime status values (1 for up, 0 for down)"
    },
    "uptimeStats": {
      "overall": {
        "type": "string",
        "description": "Overall uptime percentage"
      },
      "last24Hours": {
        "type": "string",
        "description": "Uptime for the last 24 hours"
      },
      "last7Days": {
        "type": "string",
        "description": "Uptime for the last 7 days"
      },
      "last30Days": {
        "type": "string",
        "description": "Uptime for the last 30 days"
      }
    }
  },
  "tags": ["uptime"],
  "requirements": []
}
